<h1>New appointment</h1>
<%= form_for @appointment  do |f| %>
<%= f.label :doctor %><br />
  <%= f.collection_select :doctor_id, @doctors, :id, :name, include_blank: true %><br/>
  <%= f.label :date %><br />
  <%= f.date_select :date %><br/>
  <%= f.label :time %><br />
  <%= f.time_select :time %>
  <br/>
  <%= f.hidden_field :user_id, value: current_user.id %>
  <%= f.submit%>

<% end %>