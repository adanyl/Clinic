<h2>Реєстрація</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="form-group">
 <%= f.label :phone, "Номер телефону" %><br />
 <%= f.text_field :phone, autofocus: true, class: 'form-control' %>
</div>

<div class="form-group">
 <%= f.label :name, "ПІБ" %><br />
 <%= f.text_field :name, autofocus: true, class: 'form-control' %>
</div>

  <div class="form-group">
    <%= f.label :password, "Пароль" %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> символів мінімум)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "new-password", class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.label :password_confirmation, "Підтвердження паролю" %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password", class: 'form-control' %>
    <br/>
  </div>

  <div class="form-group">
    <%= f.submit "Зареєструватись", class: 'btn btn-primary' %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
